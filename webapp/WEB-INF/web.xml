<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>HelloWorld Application</display-name>
    <description>
        This is a simple web application with a source code organization
        based on the recommendations of the Application Developer's Guide.
    </description>
    <servlet>
        <servlet-name>FileDownloader</servlet-name>
        <servlet-class>ru.sbi.app.restaurantapp.control.FileDownloader</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ajaxServlet</servlet-name>
        <url-pattern>/ajaxServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileDownloader</servlet-name>
        <url-pattern>/FileDownloader</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Writer</servlet-name>
        <servlet-class>ru.sbi.app.restaurantapp.control.Writer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewObject</servlet-name>
        <servlet-class>ru.sbi.app.restaurantapp.control.NewObject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ajaxServlet</servlet-name>
        <servlet-class>ru.sbi.app.restaurantapp.control.ajaxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Writer</servlet-name>
        <url-pattern>/Writer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewObject</servlet-name>
        <url-pattern>/NewObject</url-pattern>
    </servlet-mapping>
</web-app>
